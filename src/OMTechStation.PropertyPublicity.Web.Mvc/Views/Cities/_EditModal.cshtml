@using OMTechStation.PropertyPublicity.Web.PP.Models.Cities
@using OMTechStation.PropertyPublicity.Web.Models.Common.Modals
@model EditCityModalViewModel
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditCity")))
<form name="CityEditForm" city="form" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.City.Id" />
    <div class="modal-body">
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="cityname">@L("CityName")</label>
            <div class="col-md-9">
                <input id="cityname" class="form-control" type="text" name="Name" value="@Model.City.Name" ) required maxlength="32" minlength="2">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 col-form-label">@L("IsActive")</label>
            <div class="col-md-9">
                <div class="col-md-6">
                    <input type="checkbox" name="IsActive" value="true" id="@Model.City.IsActive" @(Model.City.IsActive ? "checked" : "") />
                    <label for="@Model.City.IsActive"></label>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Cities/_EditModal.js" asp-append-version="true"></script>
