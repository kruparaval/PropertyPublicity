@using OMTechStation.PropertyPublicity.Web.PP.Models.Countries
@using OMTechStation.PropertyPublicity.Web.Models.Common.Modals
@model EditCountryModelViewModel
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditCountry")))
<form name="CountryEditForm" country="form" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.Country.Id" />
    <div class="modal-body">
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="countryname">@("CountryName")</label>
            <div class="col-md-9">
                <input id="countryname" class="form-control" type="text" name="Name" value="@Model.Country.Name") required maxlength="32" minlength="2">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 col-form-label">@L("IsActive")</label>
            <div class="col-md-9">
                        <div class="col-md-6">
                            <input type="checkbox" name="IsActive" value="@Model.Country.IsActive" id="@Model.Country.IsActive")" @(Model.Country.IsActive ? "checked" : "") />
                            <label for="@Model.Country.IsActive")"></label>
                        </div>
                    
                
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Countries/_EditModal.js" asp-append-version="true"></script>
